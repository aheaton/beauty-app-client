<!-- show post layout -->
{{#if routines}}

{{#each routines as |routine|}}

<div class="wrapper">

<div class="card radius shadowDepth1">
  <div class="card__image border-tlr-radius">
    <img src="{{routine.photoURL}}" alt="image" class="border-tlr-radius">
        </div>

  <div class="card__content card__padding">
            <div class="card__share">
            </div>

    <article class="card__article">
      <h2><a href="#" class="show-routine-link" data-id="{{routine._id}}">{{routine.routineType}}</a></h2>

      <p>{{routine.description}}</p>
      <a href="#" class="show-routine-link" data-id="{{routine._id}}">View Routine</a>
    </article>
  </div>
  </div>
</div>

  {{/each}}

{{else}}
      <p class="noRoutinesMessage">No routines currently posted. Add a routine to start it up!</p>
    {{/if}}
