<!-- show post layout -->

{{#if routines}}
  <div class="row justify-content-center">

    {{#each routines as |routine|}}

    <div class="wrapper col-10 col-md-6 col-lg-4">

        <div class="card radius shadowDepth1">
          <div class="card__image border-tlr-radius">
            <img src="{{routine.photoURL}}" onerror=this.src="https://i.imgur.com/mOHWsc3.png" alt="image" class="border-tlr-radius mx-auto">
          </div>

          <div class="card__content card__padding">

            <article class="card__article">
              <h2><a href="#" class="edit-routine-link" data-id="{{routine._id}}">{{routine.routineType}}</a></h2>

              <p>{{routine.description}}</p>
              <a href="#" class="edit-routine-link"><i style="color: black" class="fa fa-flag fa-pencil fa-2x mr-2" data-id="{{routine._id}}"></i></a>
              <a href="#" class="delete-routine-link" data-toggle="modal" href="#confirmDeleteModal"><i style="color: black" class="fa fa-flag fa-trash fa-2x" data-id="{{routine._id}}"></i></a>
            </article>
          </div>

        </div>
      </div>

    {{/each}}

{{else}}
  <p class="noRoutinesMessage">No routines currently posted. Add a routine to start it up!</p>
{{/if}}


<!-- Confirm deletion modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
      </div>
      <div class="modal-body">
        <p>Are you sure that you want to delete this post?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" id="delete-routine-confirm">Yes</button>
        <button type="button" class="btn btn-secondary delete-modal-cancel" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
