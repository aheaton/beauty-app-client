<!-- show post layout -->
{{#if routines}}

{{#each routines as |routine|}}

<div class="wrapper">

<div class="card radius shadowDepth1">
  <div class="card__image border-tlr-radius">
    <img src="https://i.imgur.com/jYa1WDz.jpg" alt="image" class="border-tlr-radius">
        </div>

  <div class="card__content card__padding">
            <div class="card__share">

                <a id="share" class="share-toggle share-icon" href="#"></a>
            </div>
<!--
    <div class="card__meta">
    <time>17th March</time>
    </div> -->

    <article class="card__article">
      <h2><a href="#" class="edit-routine-link" data-id="{{routine._id}}">{{routine.routineType}}</a></h2>

      <p>{{routine.description}}</p>
      <a href="#" class="edit-routine-link" data-id="{{routine._id}}">Edit Routine</a>
    </article>
  </div>

  <!-- <div class="card__action">

    <div class="card__author">
      <div class="card__author-content">
        By <a href="#">Alicia Heaton</a>
      </div>
    </div>
  </div> -->
  </div>

  {{/each}}

{{else}}
      <p class="noRoutinesMessage">No routines currently posted. Add a routine to start it up!</p>
    {{/if}}

    <button type="button" class="btn btn-primary add-routine-button">Add Your Routine</button>
